<UserControl x:Class="Lec90_NotesApp.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lec90_NotesApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <StackPanel>
        <TextBlock x:Name="TitleTextBlock"
                   Text="Note title"
                   FontSize="15"
                   FontWeight="Bold"/>
        <TextBlock x:Name="EditedTextBlock"
                   Text="19 minutes"
                   FontSize="12"
                   Margin="0 10 0 0"
                   Foreground="DodgerBlue"/>
        <TextBlock x:Name="ContentTextBlock"
                   Text="Contents text ContentTextBlock ContentTextBlock ContentTextBlock ContentTextBlock "
                   FontSize="12"
                   Foreground="DarkGray"
                   TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
